<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chat">

	<!-- 채팅방 만들기 -->
	<insert parameterType="chat" id="room_create">insert into chatroom
		values(CHAT_SEQ_NO.NEXTVAL,#{roomName},#{sessionId},#{description})
	</insert>

	<!-- 방목록 가져오기 -->
	<select id="search_room" resultType="chat">select * from chatroom ORDER BY ROOMNUMBER ASC
	</select>
	
	<!-- 방목록 가져오기 -->
	<select id="search_roomUser" parameterType="chat" resultType="chat">
		select * from chatroom where sessionId = #{sessionId}
	</select>
</mapper>
