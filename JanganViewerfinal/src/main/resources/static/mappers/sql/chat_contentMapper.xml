<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chat_content">

	<!-- 채팅 추가 -->
	<insert id="chat_create" parameterType="chat_content">
		insert into chatcontent
		values(CHATCONTENT_SEQ_NO.NEXTVAL,#{roomNumber},#{userName},#{content})
	</insert>

	<!-- 방목록 가져오기 -->
	<select id="search_chat" resultType="chat_content">SELECT * FROM chatcontent
		WHERE roomNumber = #{roomNumber} ORDER BY CHATNUM ASC
	</select>
</mapper>